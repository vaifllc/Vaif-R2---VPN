  pod 'NicoProgress'
  pod 'ReachabilitySwift'
  pod 'SwiftMessages'
  pod 'PromiseKit'
  pod 'SwiftyStoreKit'
  pod 'KeychainAccess'
  pod 'CocoaLumberjack/Swift'
  pod 'PopupDialog'
  
  # External Pods
  pod 'lottie-ios'
  pod 'GSMessages'
  pod 'TrustKit'
  pod 'AFNetworking'
  pod 'AwaitKit', :git => 'https://github.com/yannickl/AwaitKit.git', :commit => '4b725f40dd189f40c0962cba792f06a2073bd977'
end


